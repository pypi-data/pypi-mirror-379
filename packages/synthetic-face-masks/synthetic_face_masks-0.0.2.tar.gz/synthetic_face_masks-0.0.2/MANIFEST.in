# Include the README and license files
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include the main script
include main.py

# Include all Python files in the face_mask package
recursive-include face_mask *.py

# Include any data files in the face_mask package
recursive-include face_mask/data *.json
recursive-include face_mask/configs *.json

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__/*

# Exclude version control files
global-exclude .git*
global-exclude .DS_Store

# Exclude build artifacts
global-exclude build/*
global-exclude dist/*
global-exclude *.egg-info/*