<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="urban">
<body>
<div id="content">
<div id="task-action"
     tal:define="debug_infos view/debug_infos">

  <h1>Debug: <tal:block replace="context/Title"/></h1>
  <h2>Properties</h2>
  <div tal:repeat="value view/values">
    <strong><tal:block replace="python: value[0]"/> :</strong>
    <span tal:content="python: value[1]" />
  </div>
  <h2>Licence</h2>
  <div tal:repeat="value view/licence_values">
    <strong><tal:block replace="python: value[0]"/> :</strong>
    <span tal:content="python: value[1]" />
  </div>
  <h2>Start Date Calculation</h2>
  <div tal:repeat="value view/start_date_values">
    <strong><tal:block replace="python: value[0]"/> :</strong>
    <span tal:content="python: value[1]" />
  </div>
  <tal:if condition="debug_infos">
  <h2>Debug informations</h2>
  <div tal:repeat="category debug_infos">
    <h3 tal:content="category/title"></h3>
    <div tal:repeat="element category/elements">
      <strong><tal:block replace="element/title"/> :</strong>
      <span tal:content="element/value" />
    </div>
  </div>
  </tal:if>

</div>
</div>
</body>
</html>
