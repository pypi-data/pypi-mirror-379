{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "type": "object",
  "properties": {
    "auterion-api-version": {
      "type": "integer",
      "minimum": 1,
      "maximum": 7
    }
  },

  "required": ["auterion-api-version"],

  "allOf": [
    {
      "if": {
        "properties": {
          "auterion-api-version": {
            "const": 1
          }
        }
      },
      "then": {
        "$ref": "api-1.json"
      }
    },
    {
      "if": {
        "properties": {
          "auterion-api-version": {
            "const": 2
          }
        }
      },
      "then": {
        "$ref": "api-2.json"
      }
    },
    {
      "if": {
        "properties": {
          "auterion-api-version": {
            "enum": [3, 4]
          }
        }
      },
      "then": {
        "$ref": "api-3-4.json"
      }
    },
    {
      "if": {
        "properties": {
          "auterion-api-version": {
            "const": 5
          }
        }
      },
      "then": {
        "$ref": "api-5.json"
      }
    },
    {
      "if": {
        "properties": {
          "auterion-api-version": {
            "const": 6
          }
        }
      },
      "then": {
        "$ref": "api-6.json"
      }
    },
    {
      "if": {
        "properties": {
          "auterion-api-version": {
            "const": 7
          }
        }
      },
      "then": {
        "$ref": "api-7.json"
      }
    }
  ]
}