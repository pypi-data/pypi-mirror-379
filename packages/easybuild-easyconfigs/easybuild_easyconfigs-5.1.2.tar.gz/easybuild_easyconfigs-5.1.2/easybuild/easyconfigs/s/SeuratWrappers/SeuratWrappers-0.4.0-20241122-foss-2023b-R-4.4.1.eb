easyblock = 'RPackage'

name = 'SeuratWrappers'
local_commit = 'a1eb0d8'
# see DESCRIPTION to determine version,
# but add date stamp of commit since version is not always bumped
version = '0.4.0-20241122'
versionsuffix = '-R-%(rver)s'

homepage = 'https://github.com/satijalab/seurat-wrappers'
description = "SeuratWrappers is a collection of community-provided methods and extensions for Seurat"

toolchain = {'name': 'foss', 'version': '2023b'}

source_urls = ['https://github.com/satijalab/seurat-wrappers/archive/']
sources = [{'download_filename': '%s.tar.gz' % local_commit, 'filename': SOURCE_TAR_GZ}]
checksums = ['1e8823c23144183a76a65d4ceea77285fed8ab64d4f77800e7aeac884bdba46d']

# Dependency Seurat 5.1.0 is already contained in the R-bundle-Bioconductor
dependencies = [
    ('R', '4.4.1'),
    ('R-bundle-Bioconductor', '3.19', versionsuffix),
]

sanity_check_paths = {
    'files': [],
    'dirs': [name],
}

moduleclass = 'bio'
