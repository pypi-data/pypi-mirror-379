easyblock = 'CMakeMake'

name = 'Highway'
version = '1.3.0'

homepage = 'https://github.com/google/highway'

description = """Highway is a C++ library for SIMD (Single Instruction, Multiple Data), i.e. applying the same
operation to 'lanes'."""

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

source_urls = ['https://github.com/google/highway/archive/refs/tags/']
sources = ['%(version)s.tar.gz']
patches = ['Highway-1.3.0_handle-empty-nodelist.patch']
checksums = [
    {'1.3.0.tar.gz': '07b3c1ba2c1096878a85a31a5b9b3757427af963b1141ca904db2f9f4afe0bc2'},
    {'Highway-1.3.0_handle-empty-nodelist.patch': 'd4e8d41c7c8e5f3ff40e736479183ad709f4c69026303867cb4e1776feb206c8'},
]

builddependencies = [
    ('binutils', '2.44'),
    ('CMake', '4.0.3'),
    ('googletest', '1.17.0'),
]

configopts = "-DHWY_SYSTEM_GTEST=ON"

runtest = "test"

sanity_check_paths = {
    'files': ['lib/libhwy.a'],
    'dirs': ['include/hwy'],
}

moduleclass = 'lib'
