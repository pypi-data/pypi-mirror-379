easyblock = 'PythonBundle'

name = 'virtualenv'
version = '20.32.0'

homepage = 'https://github.com/pypa/virtualenv'
description = "A tool for creating isolated virtual python environments."

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}
toolchainopts = {'pic': True}

builddependencies = [
    ('binutils', '2.44'),
    ('hatchling', '1.27.0'),
]

dependencies = [
    ('Python', '3.13.5'),
]

exts_list = [
    ('distlib', '0.4.0', {
        'checksums': ['feec40075be03a04501a973d81f633735b4b69f98b05450592310c0f401a4e0d'],
    }),
    ('filelock', '3.18.0', {
        'checksums': ['adbc88eabb99d2fec8c9c1b229b171f18afa655400173ddc653d5d01501fb9f2'],
    }),
    ('platformdirs', '4.3.8', {
        'checksums': ['3d512d96e16bcb959a814c9f348431070822a6496326a4be0911c40b5a74c2bc'],
    }),
    (name, version, {
        'checksums': ['886bf75cadfdc964674e6e33eb74d787dff31ca314ceace03ca5810620f4ecf0'],
    }),
]

sanity_check_paths = {
    'files': ['bin/%(namelower)s'],
    'dirs': ['lib/python%(pyshortver)s/site-packages/%(namelower)s'],
}

sanity_check_commands = ["virtualenv --help"]

moduleclass = 'tools'
