easyblock = 'CMakeMake'

name = 'termcolor'
version = '2.1.0'

homepage = 'https://termcolor.readthedocs.io/'
description = """Termcolor is a header-only C++ library for printing colored
 messages to the terminal."""

toolchain = SYSTEM

github_account = 'ikalnytskyi'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['435994c32557674469404cb1527c283fdcf45746f7df75fd2996bb200d6a759f']

builddependencies = [('CMake', '3.31.8')]

sanity_check_paths = {
    'files': ['include/%(name)s/%(name)s.hpp'],
    'dirs': ['include', 'lib']
}

moduleclass = 'devel'
