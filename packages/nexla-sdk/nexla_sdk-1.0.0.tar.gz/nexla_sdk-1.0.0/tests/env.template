# Nexla SDK Test Environment Variables Template
# Copy this file to .env and fill in your values

# ==== REQUIRED FOR INTEGRATION TESTS ====
# Nexla API Configuration
NEXLA_TEST_API_URL=https://api.nexla.io/nexla-api
NEXLA_TEST_API_VERSION=v1

# Authentication (use one of these methods)
# Method 1: Service Key (recommended for testing)
NEXLA_TEST_SERVICE_KEY=your-service-key-here

# Method 2: Access Token (alternative)
# NEXLA_TEST_ACCESS_TOKEN=your-access-token-here

# ==== OPTIONAL TEST CONFIGURATION ====
# Test Behavior Settings
NEXLA_TEST_TIMEOUT=30
NEXLA_TEST_RETRIES=3
NEXLA_TEST_LOG_LEVEL=INFO
NEXLA_TEST_PARALLEL_WORKERS=4

# Rate Limiting
NEXLA_TEST_RATE_LIMIT_REQUESTS=100
NEXLA_TEST_RATE_LIMIT_WINDOW=60

# ==== RESOURCE-SPECIFIC TEST CONFIG ====
# Credentials Testing
NEXLA_TEST_S3_BUCKET=your-test-bucket
NEXLA_TEST_S3_REGION=us-east-1
NEXLA_TEST_S3_ACCESS_KEY=your-test-access-key
NEXLA_TEST_S3_SECRET_KEY=your-test-secret-key

# Database Testing
NEXLA_TEST_POSTGRES_HOST=localhost
NEXLA_TEST_POSTGRES_PORT=5432
NEXLA_TEST_POSTGRES_DB=nexla_test
NEXLA_TEST_POSTGRES_USER=test_user
NEXLA_TEST_POSTGRES_PASSWORD=test_password

# MySQL Testing
NEXLA_TEST_MYSQL_HOST=localhost
NEXLA_TEST_MYSQL_PORT=3306
NEXLA_TEST_MYSQL_DB=nexla_test
NEXLA_TEST_MYSQL_USER=test_user
NEXLA_TEST_MYSQL_PASSWORD=test_password

# ==== PERFORMANCE TEST CONFIG ====
# Load Testing
NEXLA_TEST_CONCURRENT_REQUESTS=10
NEXLA_TEST_LARGE_DATASET_SIZE=1000
NEXLA_TEST_PERFORMANCE_TIMEOUT=300

# Memory Testing
NEXLA_TEST_MAX_MEMORY_MB=512
NEXLA_TEST_MEMORY_THRESHOLD=80

# ==== CLEANUP CONFIGURATION ====
# Test Resource Cleanup
NEXLA_TEST_CLEANUP_ENABLED=true
NEXLA_TEST_CLEANUP_TIMEOUT=60
NEXLA_TEST_PRESERVE_RESOURCES=false

# Resource Naming
NEXLA_TEST_RESOURCE_PREFIX=test_
NEXLA_TEST_RESOURCE_SUFFIX=_auto

# ==== CI/CD CONFIGURATION ====
# GitHub Actions / CI Environment
CI_ENVIRONMENT=false
CI_SKIP_SLOW_TESTS=true
CI_PARALLEL_JOBS=2

# ==== DEBUGGING ====
# Debug Settings
NEXLA_TEST_DEBUG=false
NEXLA_TEST_VERBOSE=false
NEXLA_TEST_SAVE_RESPONSES=false
NEXLA_TEST_RESPONSE_DIR=test_responses/

# ==== EXAMPLE VALUES ====
# These are example values - replace with your actual credentials
# NEXLA_TEST_SERVICE_KEY=nexla_sk_1234567890abcdef
# NEXLA_TEST_ACCESS_TOKEN=nexla_at_abcdef1234567890
# NEXLA_TEST_S3_BUCKET=my-test-bucket
# NEXLA_TEST_S3_ACCESS_KEY=AKIAIOSFODNN7EXAMPLE
# NEXLA_TEST_S3_SECRET_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

# ==== NOTES ====
# 1. Never commit the .env file to version control
# 2. Use test/sandbox credentials only
# 3. Integration tests will create and clean up resources
# 4. Set CI_ENVIRONMENT=true in CI/CD pipelines
# 5. Use NEXLA_TEST_PRESERVE_RESOURCES=true for debugging
