    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/start_server.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Connect to CodeLogic MCP Server",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ],
            "justMyCode": true
        }
    ]
}