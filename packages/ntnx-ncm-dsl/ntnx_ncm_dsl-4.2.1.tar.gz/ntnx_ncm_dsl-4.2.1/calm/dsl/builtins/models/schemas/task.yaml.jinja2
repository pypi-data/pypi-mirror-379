{% macro Task() -%}

title: Task
type: object
x-calm-dsl-type: app_task
properties:
  name:
    type: string
  description:
    type: string
  type:
    type: string
  target_any_local_reference:
    $ref: '#/components/schemas/Ref'
  exec_target_reference:
    $ref: '#/components/schemas/Ref'
  attrs:
    type: object
    additionalProperties: true
    x-calm-dsl-type: dict
  status_map_list:
    type: array
    x-calm-dsl-min-version: 3.9.0
    items:
      type: object
      x-calm-dsl-type: dict
  child_tasks_local_reference_list:
    type: array
    items:
      $ref: '#/components/schemas/Ref'
  variable_list:
    x-calm-dsl-display-name: variables
    type: array
    items:
      $ref: '#/components/schemas/Variable'
  retries:
    type: string
  timeout_secs:
    type: string
  inherit_target:
    type: boolean
    x-calm-dsl-min-version: 3.5.0
    x-calm-dsl-default-required: false

{%- endmacro %}


{% macro TaskSchema() -%}

Task:
  {{ Task()|indent(2) }}

{%- endmacro %}
