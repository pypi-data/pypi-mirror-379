# Package inclusion rules for timestrader-preprocessing
include README.md
include CHANGELOG.md
include LICENSE

# Documentation
recursive-include docs *
exclude docs/build

# Examples and notebooks
recursive-include examples *.ipynb *.py *.md

# Tests (include in source distribution but not wheel)
recursive-include tests *.py
exclude tests/__pycache__
recursive-exclude tests __pycache__

# Configuration files
include src/timestrader_preprocessing/config/*.yaml
include src/timestrader_preprocessing/config/*.json
include src/timestrader_preprocessing/py.typed

# Exclude development and build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude .git*
global-exclude .DS_Store
prune .git
prune build
prune dist
prune *.egg-info
