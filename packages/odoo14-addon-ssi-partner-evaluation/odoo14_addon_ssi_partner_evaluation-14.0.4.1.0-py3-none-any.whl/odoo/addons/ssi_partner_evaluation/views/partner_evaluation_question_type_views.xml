<odoo>
<record id="partner_evaluation_question_type_view_tree" model="ir.ui.view">
    <field name="name">partner_evaluation_question_type - Tree</field>
    <field name="model">partner_evaluation_question_type</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="partner_evaluation_question_type_view_search" model="ir.ui.view">
    <field name="name">partner_evaluation_question_type - Search</field>
    <field name="model">partner_evaluation_question_type</field>
    <field name="mode">primary</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="partner_evaluation_question_type_view_form" model="ir.ui.view">
    <field name="name">partner_evaluation_question_type - Form</field>
    <field name="model">partner_evaluation_question_type</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//page[1]" position="before">
                <page name="detial" string="Detail">
                    <group name="detail_1" colspan="4" col="2">
                        <field name="type" />
                        <field
                                name="set_id"
                                attrs="{'invisible':[('type','=','quantitative')], 'required':[('type','=','qualitative')]}"
                            />
                        <field name="mode" />
                        <field
                                name="computation_code"
                                attrs="{'invisible':[('mode','=','manual')], 'required':[('mode','=','auto')]}"
                                widget="ace"
                            />
                    </group>
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="partner_evaluation_question_type_action" model="ir.actions.act_window">
    <field name="name">Partner Evaluation Question Types</field>
    <field name="res_model">partner_evaluation_question_type</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="partner_evaluation_question_type_menu"
        name="Question Types"
        parent="menu_partner_evaluation_config"
        action="partner_evaluation_question_type_action"
        groups="partner_evaluation_question_type_group"
        sequence="120"
    />
</odoo>
