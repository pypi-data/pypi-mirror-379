<odoo noupdate="0">
<record id="partner_evaluation_policy_template" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_partner_evaluation" />
    <field
            name="state_field_id"
            search="[('model_id.model','=','partner_evaluation'),('name','=','state')]"
        />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<!-- open -->
<record
        id="partner_evaluation_policy_template_detail_open"
        model="policy.template_detail"
    >
    <field name="template_id" ref="partner_evaluation_policy_template" />
    <field
            name="field_id"
            search="[('model_id.model','=','partner_evaluation'),('name','=','open_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','partner_evaluation'),('value','=','draft')]"
        />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field name="group_ids" eval="[(6,0,[ref('partner_evaluation_user_group')])]" />
    <field name="restrict_additional" eval="0" />
</record>

