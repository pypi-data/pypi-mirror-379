<odoo>

<record id="evaluate_partner_view_form" model="ir.ui.view">
    <field name="name">evaluate_partner - Form</field>
    <field name="model">evaluate_partner</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <form string="Evaluate Partner">
            <sheet>
                <group name="main" colspan="4" col="2">
                    <field name="partner_ids" widget="many2many_tags" />
                    <field name="type_ids" widget="many2many_tags" />
                </group>
                <footer>
                    <button
                            string="Confirm"
                            class="oe_highlight"
                            type="object"
                            name="action_confirm"
                        />
                    <button
                            string="Cancel"
                            class="oe_link"
                            special="cancel"
                            type="object"
                        />
                </footer>
            </sheet>
        </form>
    </field>
</record>

<record id="evaluate_partner_action" model="ir.actions.act_window">
    <field name="name">Evaluate Partner</field>
    <field name="res_model">evaluate_partner</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="evaluate_partner_view_form" />
    <field name="target">new</field>
    <field name="binding_model_id" ref="base.model_res_partner" />
    <field name="binding_view_types">list,form</field>

</record>
</odoo>
