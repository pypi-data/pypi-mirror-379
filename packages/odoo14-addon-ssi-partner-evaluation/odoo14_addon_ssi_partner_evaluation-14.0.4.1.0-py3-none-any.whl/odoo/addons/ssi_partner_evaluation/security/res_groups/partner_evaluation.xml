<odoo>
<record id="partner_evaluation_viewer_group" model="res.groups">
    <field name="name">Viewer</field>
    <field name="category_id" ref="partner_evaluation_workflow_module_category" />
</record>

<record id="partner_evaluation_user_group" model="res.groups">
    <field name="name">User</field>
    <field name="category_id" ref="partner_evaluation_workflow_module_category" />
    <field name="implied_ids" eval="[(4, ref('partner_evaluation_viewer_group'))]" />
</record>

<record id="partner_evaluation_validator_group" model="res.groups">
    <field name="name">Validator</field>
    <field name="category_id" ref="partner_evaluation_workflow_module_category" />
    <field name="implied_ids" eval="[(4, ref('partner_evaluation_user_group'))]" />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>

<record id="partner_evaluation_company_group" model="res.groups">
    <field name="name">Company</field>
    <field name="category_id" ref="partner_evaluation_data_ownership_module_category" />
</record>

<record id="partner_evaluation_company_child_group" model="res.groups">
    <field name="name">Company and All Child Companies</field>
    <field name="category_id" ref="partner_evaluation_data_ownership_module_category" />
    <field name="implied_ids" eval="[(4, ref('partner_evaluation_company_group'))]" />
</record>

<record id="partner_evaluation_all_group" model="res.groups">
    <field name="name">All</field>
    <field name="category_id" ref="partner_evaluation_data_ownership_module_category" />
    <field
            name="implied_ids"
            eval="[(4, ref('partner_evaluation_company_child_group'))]"
        />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>
</odoo>
