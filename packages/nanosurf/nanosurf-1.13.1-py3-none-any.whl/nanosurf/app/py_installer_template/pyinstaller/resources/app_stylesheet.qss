 /******************************************************************************
 *   QRadioButton
 *****************************************************************************/
 QRadioButton::indicator {
  width:                  10px;
  height:                 10px;
  border-radius:          7px;
}

QRadioButton:disabled
{
  color: #969696;
}

QRadioButton::indicator:checked {
  background-color:       #EA390D;
  border:                 2px solid #333333;
}

QRadioButton::indicator:unchecked {
  background-color:       #1f1f1f;
  border:                 2px solid #5d5d5d;
}

 /******************************************************************************
 *   QCheckBox
 *****************************************************************************/
QCheckBox:disabled
{
  color: #969696;
}

