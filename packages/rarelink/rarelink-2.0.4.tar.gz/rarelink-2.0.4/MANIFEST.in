# Top-level repo files
include LICENSE
include README.md
include pyproject.toml
include CHANGELOG.md
include CONTRIBUTING.md
include .gitignore
include .editorconfig
include .pre-commit-config.yaml

# Everything under these folders
recursive-include res *
recursive-include submodules *
recursive-include tests *
recursive-include src *

# Explicitly exclude docs/ and RareLink-FHIR IG
prune docs
prune src/fsh/output
prune src/fsh/fsh-generated
prune src/fsh/input-cache
prune src/fsh/temp
prune src/fsh/template

# Common CI/dev folders you don't need in sdist (optional)
prune .github
prune .git
prune .venv
prune build
prune dist
