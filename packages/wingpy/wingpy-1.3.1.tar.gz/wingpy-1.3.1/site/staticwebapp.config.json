{
    "trailingSlash": "auto",
    "routes": [
        {
            "route": "/logout",
            "redirect": "/.auth/logout"
        },
        {
            "route": "/login",
            "redirect": "/.auth/login/github"
        },
        {
            "route": "/.auth/login/aad",
            "statusCode": 404
        },
        {
            "route": "/*",
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        }
    ],
    "responseOverrides": {
        "401": {
            "statusCode": 302,
            "redirect": "/.auth/login/github?post_login_redirect_uri=.referrer"
        },
        "404": {
            "redirect": "/404.html"
        }
    }
}