<chart-table id="{{ id }}">
  <div class="chart-table-title">{{ title }}</div>
  <div class="chart-table-content">
    <table>
      <tr class="chart-table-column-headers">
      {% for column_header in column_headers %}
        <th>{{ column_header }}</th>
      {% endfor %}
      </tr>

      {% for row in row_values %}
      <tr class="chart-table-row-values">
        {% for value in row %}
          <td>{{ value }}</td>
        {% endfor %}
      </tr>
      {% endfor %}
    </table>
  </div>
  {% if description %}
    <div class="chart-table-description">{{ description }}</div>
  {% endif %}
</chart-table>