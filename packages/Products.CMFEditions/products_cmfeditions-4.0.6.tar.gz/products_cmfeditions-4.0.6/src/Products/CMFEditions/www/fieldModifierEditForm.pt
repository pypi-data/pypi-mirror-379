<p tal:replace="structure here/manage_page_header"
   omit-tag=""
>Header</p>
<p tal:replace="structure here/manage_tabs"
   omit-tag=""
>tabs</p>


<h2>Edit Modifier</h2>

<form action="edit"
      method="post"
>

  <table border="0">

    <tr>
      <th>
        Title
      </th>
      <td>
        <input name="title"
               size="40"
               type="text"
               value=""
               tal:attributes="
                 value here/title;
               "
        />
      </td>
    </tr>

    <tr>
      <th>
          Enabled
      </th>
      <td>
        <input name="enabled"
               type="checkbox"
               value="True"
               tal:attributes="
                 checked here/isEnabled;
               "
        />
      </td>
    </tr>

    <tr>
      <th>
            Condition
      </th>
      <td>
        <input name="condition"
               size="80"
               type="text"
               value=""
               tal:attributes="
                 value here/getTalesCondition;
               "
        />
      </td>
    </tr>

    <tr>
      <th>
            Field names to check
      </th>
      <td>
        <textarea cols="25"
                  name="field_names"
                  rows="4"
                  value=""
                  tal:content="here/getFieldNames"
        >
        </textarea>
      </td>
    </tr>

    <tr>
      <th>
            Maximum file size in bytes
        <br />
            (should not be set larger than 32768000)
      </th>
      <td>
        <input name="max_size"
               type="text"
               value=""
               tal:attributes="
                 value here/max_size;
               "
        />
      </td>
    </tr>

    <tr>
      <th>
      </th>
      <td colspan="2">
        <input name="submit"
               type="submit"
               value="Save"
        />
      </td>
    </tr>

  </table>

</form>

<p tal:replace="structure here/manage_page_footer"
   omit-tag=""
>Footer</p>
