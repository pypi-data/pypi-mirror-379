# Include important documentation and configuration files
include README.md
include LICENSE
include WIKI.md
include requirements.txt
include pyproject.toml

# Include protocol files and examples
recursive-include protocols *.json
recursive-include examples *.json

# Include documentation
recursive-include docs *.md

# Exclude development and test files from distribution
recursive-exclude tests *
recursive-exclude * __pycache__
recursive-exclude * *.pyc
recursive-exclude * *.pyo
recursive-exclude * .git*
exclude README_OLD.md
exclude .gitignore
exclude Makefile*
exclude *.backup
exclude cleanup_*.py
exclude convert_*.py
exclude fix_*.py
exclude manual_*.py
exclude validate_protocols.py
recursive-exclude * *.py[co]

# Exclude development files
exclude .gitignore
exclude Makefile*
exclude test_*.py
recursive-exclude .github *
exclude .pytest_cache
exclude .venv