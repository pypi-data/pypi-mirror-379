# Include documentation and metadata
include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt
include requirements-dev.txt

# Include examples
include production_demo.py
include sample.py
recursive-include examples *.py
recursive-include examples *.md

# Include package data
recursive-include src/vizly *.py
recursive-include src/vizly *.json
recursive-include src/vizly *.html
recursive-include src/vizly *.css
recursive-include src/vizly *.js

# Exclude development files
global-exclude *.pyc
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.egg-info