{
  "type": "theme",
  "version": 1,
  "description": "Sidebar theme",
  "templates": ["style.qss"],
  "images": {
    "target_power": {
      "sources": [
        "target_power.svg"
      ],
      "targets": [
        ["{basename}_on{ext}",         {"#000000": "target_power.on"}],
        ["{basename}_on_hover{ext}",   {"#000000": "target_power.on_hover"}]
      ]
    },
    "target_power_off": {
      "sources": [
        "target_power_off.svg"
      ],
      "targets": [
        ["target_power_disabled_0{ext}", {"#000000": "base.selection_color", "#808080": "js1.disabled_foreground"}],
        ["target_power_disabled_1{ext}", {"#808080": "base.selection_color", "#000000": "js1.disabled_foreground"}],
        ["target_power_off_0{ext}",      {"#000000": "base.selection_color", "#808080": "target_power.off"}],
        ["target_power_off_1{ext}",      {"#808080": "base.selection_color", "#000000": "target_power.off"}]
      ]
    },
    "active_checked": {
      "sources": [
        "active_checked.svg"
      ],
      "targets": [
        ["{basename}_enabled{ext}", {"#000000": "js1.unchecked_enabled", "#888888": "js1.unchecked_hover"}],
        ["{basename}_hover{ext}",   {"#000000": "js1.unchecked_hover", "#888888": "js1.unchecked_hover"}]
      ]
    },
    "closed": {
      "sources": [
        "active_unchecked.svg",
        "device_close.svg",
        "doc.svg",
        "info.svg"
      ],
      "targets": [
        ["{basename}_disabled{ext}", {"#000000": "js1.unchecked_disabled", "#888888": "js1.disabled_foreground"}],
        ["{basename}_enabled{ext}",  {"#000000": "js1.unchecked_enabled", "#888888": "base.foreground_alternate"}],
        ["{basename}_hover{ext}",    {"#000000": "js1.unchecked_hover", "#888888": "base.foreground_alternate"}]
      ]
    },
    "open": {
      "sources": [
        "device_open.svg"
      ],
      "targets": [
        ["{basename}_enabled{ext}", {"#000000": "target_power.on"}],
        ["{basename}_hover{ext}",   {"#000000": "target_power.on_hover"}]
      ]
    },
    "fuse_normal": {
      "sources": ["fuse_normal.svg"],
      "targets": [
        ["{basename}{ext}",          {"#000000": "target_power.on"}],
        ["{basename}_disabled{ext}", {"#000000": "js1.unchecked_disabled"}]
      ]
    },
    "fuse_engaged": {
      "sources": ["fuse_engaged.svg"],
      "targets": [
        ["{basename}_0{ext}",      {"#ffffff": "devctrl.foreground", "#808080": "target_power.off", "#000000": "base.background"}],
        ["{basename}_1{ext}",      {"#ffffff": "devctrl.foreground", "#000000": "target_power.off", "#808080": "base.background"}]
      ]
    },

    "copy": {
      "sources": [
      ],
      "targets": [
        ["{basename}{ext}", {}]
      ]
    }
  }
}