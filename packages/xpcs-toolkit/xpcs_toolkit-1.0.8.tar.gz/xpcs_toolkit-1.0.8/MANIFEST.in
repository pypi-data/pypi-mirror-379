# Core documentation files
include AUTHORS.rst
include CONTRIBUTING.rst
include HISTORY.rst
include LICENSE
include README.rst
include CODE_OF_CONDUCT.rst
include CLAUDE.md

# Configuration files
include pyproject.toml

# Include all test directories and files
recursive-include tests *
recursive-exclude tests __pycache__
recursive-exclude tests *.py[co]

# Include validation framework
recursive-include validation *.py *.md

# Include scripts directory
recursive-include scripts *.py

# Include documentation with all formats
recursive-include docs *.rst *.md *.py conf.py Makefile make.bat *.jpg *.png *.gif *.yaml

# Include GitHub workflows and CI
recursive-include .github *.yml *.yaml

# Include package data and UI resources
recursive-include xpcs_toolkit/configure *.json
recursive-include xpcs_toolkit/ui *.ui
recursive-include xpcs_toolkit/ui/resources *.qrc *.png

# Exclude build, cache and temporary artifacts
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.log
recursive-exclude * *.db
recursive-exclude * *.tmp
recursive-exclude * *.temp
recursive-exclude * *.bak
recursive-exclude * *debug*
recursive-exclude * *benchmark_results*.json
recursive-exclude * *validation_report*.json
recursive-exclude * *optimization_report*.json
recursive-exclude * security_report*.json
recursive-exclude * quality_report.md
recursive-exclude * coverage.xml
global-exclude .DS_Store
global-exclude Thumbs.db
global-exclude *.pyc
global-exclude __pycache__

# Exclude performance benchmarks (disabled)
exclude performance_benchmarks_disabled
