include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include pyproject.toml

# Include documentation
recursive-include docs *.md *.rst *.txt
recursive-include examples *.py *.md *.csv *.xlsx

# Include test data
recursive-include test_data *.csv *.xlsx *.txt

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude *.git*
prune .ipynb_checkpoints
prune __pycache__
prune *.egg-info
prune build
prune dist