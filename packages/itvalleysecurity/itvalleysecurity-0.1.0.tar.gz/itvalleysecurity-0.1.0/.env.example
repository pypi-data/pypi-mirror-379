# Configuração do ITValleySecurity SDK

# Chave secreta para assinatura dos tokens JWT (OBRIGATÓRIO - mínimo 32 caracteres)
JWT_SECRET_KEY=sua_chave_secreta_muito_segura_com_32_ou_mais_caracteres

# Algoritmo de assinatura JWT
JWT_ALGORITHM=HS256

# Tempo de expiração do token de acesso (em minutos)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15

# Tempo de expiração do token de refresh (em dias)
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Emissor dos tokens JWT
JWT_ISSUER=ITValley

# Fonte do token: auto (tenta header e cookie), bearer (apenas header), cookie (apenas cookie)
EV_TOKEN_SOURCE=auto

# Nome do cookie para o token de acesso
EV_COOKIE_ACCESS=access_token

# Nome do cookie para o token de refresh
EV_COOKIE_REFRESH=refresh_token

# Política de validação do campo 'sub': email, uuid ou any
EV_SUB_POLICY=any
