# Include the README and other documentation files
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml

# Include configuration files
include config.ini.sample
include test_config.conf

# Include data files
include did_serial.csv
include firmware_checksums.json
include *.json

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

# Include DBC files
recursive-include dbc *

# Include firmware files (but not the entire upload_firmware directory)
recursive-include FCEV_US_25J040001_5 *.bin
recursive-include hvac_did_flash *.bin

# Include any configuration or data files in the package
recursive-include hvac_did_flash *.ini
recursive-include hvac_did_flash *.conf
recursive-include hvac_did_flash *.json
recursive-include hvac_did_flash *.csv

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .DS_Store
global-exclude .git*
global-exclude *.so
global-exclude *.dll
global-exclude *.dylib

# Exclude build and test files
prune build
prune dist
prune .pytest_cache
prune .coverage
prune htmlcov
prune .tox
prune .nox

# Exclude virtual environment
prune venv
prune env
prune .venv
prune .env

# Exclude IDE files
prune .vscode
prune .idea
prune *.egg-info

# Exclude large directories that shouldn't be in the package
prune upload_firmware/processed
prune upload_firmware/backup
prune logs
