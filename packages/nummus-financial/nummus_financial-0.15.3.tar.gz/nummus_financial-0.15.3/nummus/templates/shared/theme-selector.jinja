<fieldset class="radioset mx-auto max-w-min">
  <label>
    <input
      class="theme-system"
      name="theme"
      type="radio"
      value="system"
      autocomplete="off"
      onclick="updateTheme('system')"
    />
    <icon>devices</icon>
  </label>
  <label>
    <input
      class="theme-light"
      name="theme"
      type="radio"
      value="light"
      autocomplete="off"
      onclick="updateTheme('light')"
    />
    <icon>light_mode</icon>
  </label>
  <label>
    <input
      class="theme-dark"
      name="theme"
      type="radio"
      value="dark"
      autocomplete="off"
      onclick="updateTheme('dark')"
    />
    <icon>dark_mode</icon>
  </label>
</fieldset>
