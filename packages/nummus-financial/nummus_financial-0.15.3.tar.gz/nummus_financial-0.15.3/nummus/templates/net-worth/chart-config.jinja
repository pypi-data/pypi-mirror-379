<div
  id="net-worth-config"
  hx-indicator=".net-worth-indicator"
  hx-target="#net-worth-chart-data"
  hx-swap-oob="{{ oob }}"
>
  <div class="flex justify-around gap-2">
    {% for value, label in ctx.period_options.items() %}
      {% set btn_class = "btn-tonal" if value == ctx.period else "btn-text" %}
      <button
        class="{{ btn_class }}"
        hx-get="{{ url_for('net_worth.chart', period=value) }}"
        hx-disabled-elt="this"
      >
        {{ label }}
      </button>
    {% endfor %}
  </div>
</div>
