{% for group, categories in category_groups.items() %}
  <optgroup label="{{ group.pretty }}">
    {% for category in categories %}
      <option
        label="{{ category.emoji_name }}"
        value="{{ category.uri }}"
        {% if category.uri == selected_uri %}selected{% endif %}
        {% if category.asset_linked and hide_asset_linked %}disabled hidden{% endif %}
      >
        {{ category.name }}
      </option>
    {% endfor %}
  </optgroup>
{% endfor %}
