<label class="flex items-center justify-between py-0.5">
  <div>{{ label.name }}</div>
  <button
    class="btn-text btn-sq"
    hx-get="{{ url_for('labels.label', uri=label.key) }}"
    hx-disabled-elt="this"
    hx-target="#dialog"
    hx-swap="innerHTML show:#dialog:top"
    hx-push-url="#dialog"
  >
    <icon>edit</icon>
  </button>
</label>
