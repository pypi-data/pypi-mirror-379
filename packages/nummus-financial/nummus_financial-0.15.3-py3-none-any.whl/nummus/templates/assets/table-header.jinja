<div
  id="valuation-header"
  class="mb-2 flex items-center gap-2"
  hx-swap-oob="{{ oob }}"
>
  <h1 class="text-primary mr-auto font-serif text-2xl">Valuations</h1>
  <button
    id="valuation-filter-btn"
    class="{{ 'btn-filled' if ctx.any_filters else 'btn-tonal' }}"
    onclick="htmx.toggleClass(htmx.find('#valuation-filters'), 'open')"
  >
    <icon>tune</icon>
  </button>
  {% if ctx.editable %}
    <button
      class="btn-tonal"
      hx-get="{{ url_for('assets.new_valuation', uri=ctx.uri) }}"
      hx-disabled-elt="this"
      hx-target="#dialog"
      hx-swap="innerHTML show:#dialog:top"
      hx-push-url="#dialog"
    >
      <icon>add</icon>New
    </button>
  {% endif %}
</div>
