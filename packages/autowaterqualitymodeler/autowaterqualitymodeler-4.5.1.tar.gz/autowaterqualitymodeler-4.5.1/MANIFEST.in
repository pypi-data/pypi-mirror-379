# Include the README
include README.md

# Include the license file
include LICENSE

# Include the changelog
include CHANGELOG.md

# Include configuration files
recursive-include autowaterqualitymodeler/config *.json

# Include resource files
recursive-include autowaterqualitymodeler/resources *.xlsx *.txt

# Include data files for examples
recursive-include data *.csv

# Include example scripts
recursive-include examples *.py *.md

# Exclude compiled files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store

# Exclude development and CI files
recursive-exclude .github *
exclude .cursorindexingignore
exclude .env
exclude make
exclude uv.lock

# Exclude test outputs
recursive-exclude output *
recursive-exclude tests/output *