SCOTTY_QEMUPARAMS="${SCOTTY_QEMUPARAMS:--smp 4}"

# Runs an arbitrary command in the scotty docker
DOCKER_EXTRA_ARGS="${DOCKER_EXTRA_ARGS} --privileged --network host"
# shellcheck disable=SC1091
source "$(dirname "${0}")/scotty"
run_command "${@}"
