    "version": "0.2.0",
    "configurations": [
        {
            "name": "with config options",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/suvi/app.py",
            "args": [
                "--bind",
                "127.0.0.1", 
                "--enforce",
                "--admin-login",
                "admin",
                "--admin-password",
                "ecmind",
                "--user-login",
                "user",
                "--user-password",
                "test",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "suvi without config options",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/suvi/app.py",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "suvi --help",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/suvi/app.py",
            "args": ["--help"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }        
    ]
}