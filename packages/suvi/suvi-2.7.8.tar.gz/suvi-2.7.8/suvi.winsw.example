<service>                                                                                                                                                                                                                                                
  <id>suvi</id>
  <name>ECMind suvi</name>
  <description>Task supervisor</description>
  <workingdirectory>X:\suvi</workingdirectory>
  <executable>env\Scripts\suvi.exe</executable>
  <arguments></arguments>
  <env name="SUVI_ENFORCE" value="True" />
  <env name="SUVI_ADMIN_LOGIN" value="admin" />
  <env name="SUVI_ADMIN_PASSWORD" value="xxx" />
  <env name="SUVI_USER_LOGIN" value="ecmind" />
  <env name="SUVI_USER_PASSWORD" value="yyy" />
  <log mode="roll-by-size">
    <sizeThreshold>10240</sizeThreshold>
    <keepFiles>8</keepFiles>
  </log>
  <logpath>X:\suvi\servicelog</logpath>
</service>
