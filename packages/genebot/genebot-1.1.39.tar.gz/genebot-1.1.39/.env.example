# GeneBot Multi-Market Trading Bot Configuration
# 
# This is an example configuration file for PRODUCTION environment.
# Copy this file to .env and update with your actual credentials.
# 
# IMPORTANT: Never commit .env files to version control!
# The .env file is generated by 'genebot init-config' command.

# Application Settings (Production)
GENEBOT_ENV=production
DEBUG=false
DRY_RUN=false
APP_NAME=GeneBot
APP_VERSION=1.1.31
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///genebot.db

# =============================================================================
# CRYPTO EXCHANGE API CREDENTIALS (PRODUCTION)
# =============================================================================
# 
# SECURITY WARNING: These are PRODUCTION settings for LIVE TRADING
# Ensure you have:
# - Tested thoroughly in sandbox/paper trading mode
# - Set appropriate API key permissions (read + trade, no withdraw)
# - Enabled IP whitelisting where possible
# - Never share these credentials

# Binance (Production - LIVE TRADING)
BINANCE_API_KEY=your_production_binance_api_key_here
BINANCE_API_SECRET=your_production_binance_api_secret_here
BINANCE_SANDBOX=false

# Coinbase Pro
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here
COINBASE_SANDBOX=false

# Kraken
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# KuCoin
KUCOIN_API_KEY=your_kucoin_api_key_here
KUCOIN_API_SECRET=your_kucoin_api_secret_here
KUCOIN_PASSPHRASE=your_kucoin_passphrase_here
KUCOIN_SANDBOX=false

# Bybit
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_SANDBOX=false

# =============================================================================
# FOREX BROKER CREDENTIALS (PRODUCTION)
# =============================================================================
# 
# SECURITY WARNING: These are PRODUCTION settings for LIVE TRADING
# Ensure you understand the risks and have proper risk management in place

# OANDA (Production - LIVE TRADING)
OANDA_API_KEY=your_production_oanda_api_key_here
OANDA_ACCOUNT_ID=your_production_oanda_account_id_here
OANDA_ENVIRONMENT=live

# MetaTrader 5
MT5_LOGIN=your_mt5_login_here
MT5_PASSWORD=your_mt5_password_here
MT5_SERVER=your_mt5_server_here
MT5_PATH=/Applications/MetaTrader 5/terminal64.exe

# Interactive Brokers
IB_HOST=127.0.0.1
IB_PORT=7496
IB_CLIENT_ID=1

# Alpaca (Forex)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here
ALPACA_BASE_URL=https://api.alpaca.markets

# FXCM
FXCM_API_KEY=your_fxcm_api_key_here
FXCM_ACCESS_TOKEN=your_fxcm_access_token_here
FXCM_SERVER=real

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Portfolio Settings
PORTFOLIO_VALUE=100000
BASE_CURRENCY=USD
MAX_POSITIONS=10
MAX_DAILY_LOSS=0.05
MAX_DRAWDOWN=0.15

# Risk Management
RISK_PER_TRADE=0.01
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENTAGE=0.02
TAKE_PROFIT_PERCENTAGE=0.04

# Strategy Settings
DEFAULT_TIMEFRAME=1h
MIN_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# MARKET-SPECIFIC SETTINGS
# =============================================================================

# Crypto Settings
CRYPTO_DEFAULT_QUOTE=USDT
CRYPTO_MIN_TRADE_AMOUNT=10.0
CRYPTO_MAX_SLIPPAGE=0.005

# Forex Settings
FOREX_DEFAULT_LOT_SIZE=0.01
FOREX_MAX_SPREAD_PIPS=5
FOREX_MAX_SLIPPAGE_PIPS=2

# =============================================================================
# COMPLIANCE AND REPORTING
# =============================================================================

# Compliance Settings
COMPLIANCE_ENABLED=true
AUDIT_TRAIL_ENABLED=true
GENERATE_REPORTS=true
REPORT_FREQUENCY=daily
FIFO_ACCOUNTING=true

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_NOTIFICATIONS=false

# Email Notifications
EMAIL_NOTIFICATIONS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here

# Discord Notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
DISCORD_NOTIFICATIONS=false

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL=300
MAX_CONCURRENT_REQUESTS=10

# Development Settings
ENABLE_BACKTESTING=true
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-01-01

# Logging Settings
LOG_FORMAT=standard
LOG_FILE=logs/genebot.log
MAX_LOG_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Security Settings
ENCRYPT_CREDENTIALS=true
API_RATE_LIMIT_ENABLED=true
SESSION_TIMEOUT=3600